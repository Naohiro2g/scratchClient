	<description>
		Controlling a blink-device https://blink1.thingm.com/
    </description>
    
	<!-- =========================================================================== -->
	<adapter class='adapter.usbAdapter.Blink_Adapter'  name='blink_1'>
		<description></description>

		<!--  led_0 is 'all led' -->
        <input_value name='led_0'>
            <variable name='led_all'/>
            <variable name='led_0'/>
        </input_value>

        <input_value name='led_1'>
            <variable name='led_1'/>
        </input_value>
        
        <input_value name='led_2'>
            <variable name='led_2'/>
        </input_value>
        
	</adapter>

