    <description>Pimorono Micro Dot Phat.
        Text output</description>

    <!-- =========================================================================== -->
    <adapter class='adapter.microdotAdapter.Microdot_Adapter'  name='mda'>
        
        <description>Text output</description>
        
        <input_value name='text'>
            <variable name='mdaText'/>
        </input_value>
        
        <input_value name='brightness'>
            <variable name='bright'/>
        </input_value>
        
        <input name='clear'>
            <broadcast name='clearDisplay'/>
        </input>
        
        <parameter name='microdot.rotate180' value='false' />
        <parameter name='microdot.mirror' value='false' />
    </adapter>

</config>
