#
# logging setup for scratchClient
#
# tornado needs special loggers, as it defines its own hierarchy if these are not available
#
# ( these files are preprocessed to remove comment lines.)
{
    "version": 1,
    "disable_existing_loggers": false,

    "loggers": {

        "": {
            "level": "INFO",
            "propagate": true,
            "handlers": [   "default"  ]
        },
        #
        # tornado logging
        #
        "tornado.access": {
            "level": "INFO",
            "propagate": false,
            "handlers": [  "tornado"   ]
        },
        "tornado.application": {
            "level": "INFO",
            "propagate": false,
            "handlers": [  "tornado"   ]
        },
        "tornado.general": {
            "level": "INFO",
            "propagate": false,
            "handlers": [  "tornado"   ]
        }
    },
    
    "handlers": {
        "default": {
            "formatter": "standard",
            "class": "logging.StreamHandler",
            "level": "DEBUG"
        },
       "tornado": {
            "formatter": "standard",
            "class": "logging.StreamHandler",
            "level": "INFO"
        }
    },
    
    "formatters": {
        "standard": {
            "format": "%(asctime)s [%(levelname)s] %(name)s - %(lineno)d: %(message)s"
        }
    }
}